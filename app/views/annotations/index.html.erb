<p id="notice"><%= notice %></p>

<h1>Annotations</h1>

<table>
  <thead>
    <tr>
      <th>Ebook</th>
      <th>Section</th>
      <th>Highlight ranges</th>
      <th>Categories</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annotations.each do |annotation| %>
      <tr>
        <td><%= annotation.ebook_id %></td>
        <td><%= annotation.section_id %></td>
        <td><%= annotation.highlight_ranges %></td>
        <td><%= annotation.categories %></td>
        <td><%= annotation.remark %></td>
        <td><%= link_to 'Show', annotation %></td>
        <td><%= link_to 'Edit', edit_annotation_path(annotation) %></td>
        <td><%= link_to 'Destroy', annotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Annotation', new_annotation_path %>
