<script>
    var iframeInit = bodyInit();
</script>
<p>
  <strong>Title:</strong>
  <%= @ebook.title %>
</p>
<div id="ebook-dashboard" data-book-id="<%= @ebook.id %>" >
  <iframe id="ebook-section" src="<%= @ebook.current_location_url %>" onload="iframeInit();" data-section-number="<%= @ebook.spine_index %>" data-ebook-id="<%= @ebook.id %>"></iframe>
  <ul id="notes-column">
    <!-- Use _reading_column_note.html.erb -->
  </ul>
</div>
<div class="controls">
  <button class="controls" id="previous-section" onclick="loadSection('prev');">Previous Section</button>
  <button class="controls" id="next-section" onclick="loadSection('next');">Next Section</button>
</div>
<div class="controls-info">
  <p class="controls-info" id="reading-speed">Reading Speed: 1/10</p>
  <p class="controls-info" id="font-size">Font Size: 1.00em</p>
  <p class="controls-info" id="highlighting-mode">Highlighting Mode: False</p>
</div>

<%= link_to 'Edit', edit_ebook_path(@ebook) %> |
<%= link_to 'Back', ebooks_path %>
